<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@dish, @dish.comments.build] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :Comment %>
      <%= f.text_field :body, class: 'form-control' %>
      <%= f.submit "Enter", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>